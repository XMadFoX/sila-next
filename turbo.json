{
	"$schema": "https://turbo.build/schema.json",
	"globalDependencies": [
		"**/.env.*local"
	],
	"pipeline": {
		"build": {
			"dependsOn": [
				"^build"
			],
			"outputs": [
				".next/**",
				"!.next/cache/**"
			]
		},
		"lint": {},
		"dev": {
			"cache": false,
			"persistent": true
		}
	},
	"globalEnv": [
		"NEXT_PUBLIC_TRPC_ENDPOINT",
		"NEXTAUTH_URL",
		"DB_URL",
		"DB_AUTH_TOKEN",
		"SMTP_HOST",
		"SMTP_PORT",
		"SMTP_FROM",
		"SMTP_USER",
		"SMTP_PASS",
		"GOOGLE_ID",
		"GOOGLE_SECRET",
		"NODE_ENV"
	]
}
